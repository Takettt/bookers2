

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%= image_tag @user.get_profile_image %>
       <table class="table">
         <tbody>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
           </tr>
         </tbody>
       </table>
       <div class="row">
         <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
           <i class="fas fa-user-cog"></i>
         <% end %>
      </div>

       <h2>New book</h2>
        <%= form_with model: @book do |f| %>
       <h4>Title</h4>
        <%= f.text_field :title %>
       <h4>Opinion</h4>
         <%= f.text_area :body %>
         <%= f.submit 'Create Book' %>
        <% end %>
    </div>

 <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
    <table class="table table-hover tabele-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
       </thead>
        <tbody>
           <tr>
             <td>

                 <%= link_to user_path(@book_show) do %>
                  <%= image_tag @book_show.user.profile_image, size: "100x100" %><br>
                  <%= @book_show.user.name%>
                 <% end %>
              </td>
             <td><%= link_to @book_show.title,book_path(@book_show) %></td>
             <td><%= @book_show.body %></td>
              <% if @book_show.user_id == current_user.id %>
             <td><%= link_to "Edit",edit_book_path(@book_show) %></td>
             <td><%= link_to "Destroy",book_path(@book_show),method: :delete %></td>
             <% end %>
           </tr>
        </tbody>
    </table>
 </div>
 </div>
</div>